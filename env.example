# Server Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Database
MONGODB_URI=mongodb://localhost:27017/uweb3bank-admin
# For production: mongodb+srv://username:password@cluster.mongodb.net/uweb3bank-admin

# Virtual Card API Configuration
VIRTUAL_CARD_API_BASE_URL=https://api.virtualcardprovider.com
VIRTUAL_CARD_API_KEY=your-virtual-card-api-key
VIRTUAL_CARD_API_SECRET=your-virtual-card-api-secret

# Admin Dashboard Configuration
ADMIN_EMAIL=admin@uweb3bank.com
ADMIN_PASSWORD=secure-admin-password-change-this

# Default Profit Margin Settings (in percentage)
DEFAULT_PROFIT_MARGIN=2.5
MIN_PROFIT_MARGIN=0.5
MAX_PROFIT_MARGIN=10.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads 